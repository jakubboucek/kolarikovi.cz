{
  "rules": {
    "public": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).val() == true"
    },
    "config": {
      ".read": true,
      ".write": false
    },
    "live": {
      ".read": "root.child('config/published').val() == true || root.child('admins').child(auth.uid).val() == true",
      ".write": false
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
}
